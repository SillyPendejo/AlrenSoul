{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "~hooks": ["src/hooks/EXPORT.ts"],
      "~hocs": ["src/hocs/EXPORT.ts"],
      "~mocks/*": ["src/mocks/*"],
      "~api": ["src/api/EXPORT.ts"],

      "~modals": ["src/components/modals/EXPORT.ts"],
      "~layouts": ["src/components/layouts/EXPORT.ts"],
      "~providers": ["src/providers/EXPORT.ts"],
      "~sections": ["src/components/sections/EXPORT.ts"],
      "~~sections/*": ["src/components/sections/*"],

      "~pages/*": ["src/pages/*"],

      "~components": ["src/components/EXPORT.ts"],

      "~svg": ["src/elements/svg/EXPORT.tsx"],
      "~ui": ["src/elements/ui/EXPORT.ts"],
      "~ux": ["src/elements/ux/EXPORT.ts"],

      "~modules": ["src/modules/EXPORT.ts"],
      "~types": ["src/types/EXPORT.ts"],
      "~utils/*": ["src/utils/*"],
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
